/**app.wxss**/
view {
  font-family: Arial, Helvetica, sans-serif;
}
view, scroll-view {
  background-color: #fff;
}
.container {
  height: 100%;
  width: 100%;
  background-color: #eee;
} 



.hot-rooms {
  margin: 10px 0 0 0;
  height: auto;
  width: 100%;
}
.hot-rooms .title {
  font-size: 14px;
  line-height: 30px;
  text-indent: 1rem;
}

.hot-rooms .hot-items {
  display: flex;
  flex-flow: row wrap;
  justify-content:space-between;
  width: 100%;
  height: auto;
}

.hot-rooms .hot-items .hot-item {
  width: 50%;
  height: 350rpx;
}

.hot-rooms .hot-items .hot-item .hot-item-img {
  width: 90%;
  height: 75%;
  border-radius: 15px;
  overflow: hidden;
  margin: 0 auto;
}
.hot-rooms .hot-items .hot-item .hot-item-text {
  font-size: 12px;
  line-height: 20px;
  color: #666;
  width: 90%;
  margin: 0 auto;

}
.hot-rooms .hot-items .hot-item .hot-item-img image {
  width: 100%;
}
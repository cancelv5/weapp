page {
    height: 100%;
}
.room-warp {
    height: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: stretch;
}
.msg-pane {
    width: 100%;
    flex-grow: 1;
    display: flex;
    justify-content: flex-start;
    flex-flow: column nowrap;
}
.video {
    width: 100%;
    height: 225px;
    border-bottom: 1px solid #999;
}
.video video {
    width: 100%;
    height: 100%;
}


.top-title {
    height: 40px;
    width: 95%;
    margin: 0 auto;
    display: flex;
    justify-content: flex-start;
    
}
.msg-content {
    width: 100%;
    flex-grow: 1;
    border-top: 1px solid #ddd;
    background-color: #eee;
}

.msg-content .msg-content-scroll {
    height: 318px;
}

.msg-content .msg-content-scroll .msg {
    background-color: transparent;
    font-size: 12px;
    line-height: 20px;
    width: 100%;
    color: #999;
    text-indent: 1em;
}
.msg-content .msg-content-scroll .msg.log {
    color: sandybrown;
}
.top-title .title-nav {
    height: 38px;
    line-height: 40px;
    font-size: 12px;
    color: #666;
    padding: 0 10px;
}

.top-title .title-nav.active {
    border-bottom: 2px solid sandybrown;
}

.chart-pane {
    width: 100%;
    height: 40px;
    background-color: #fff;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}

.chart-pane .text {
    height: 30px;
    flex-grow: 1;
}

.chart-pane .text input {
    width: 90%;
    margin: 0 auto;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 12px;
    text-indent: 1em;
}

.chart-pane .btn {
    width: 80px;
    height: 30px;
}

.chart-pane .btn button {
    width: 90%;
    height: 100%;
    font-size: 12px;
}

